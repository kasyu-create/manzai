<div class="pull-right" style="text-align: right;">
	<%= search_form_for(@search, url:users_scripts_path) do |f| %>
		<%= f.label :name, "キーワード" %>
		<%= f.search_field :name_cont %>
		<%= f.submit %>
	<% end %>
</div>

<div class="row">
  <div class="col-xs-10 col-xs-offset-1">

    <h2>投稿ネタ一覧</h2>
    <h4>ここは全ユーザーの投稿したネタが見れます！</h2>
    <br>

  </div>

  <br>
    <!-- ofsetは左右の余白 -->
  <% @scripts.each do |script| %>
    <table class="table genre-index">
      <thead>
        <tr>
          <th><%= script.user.name %></th>
        </tr>
      </thead>

      <tbody>

          <tr>
            <td><%= link_to script.name, users_script_path(script) %></td>
          </tr>

      </tbody>
    </table>
      <% end %>


</div>
</div>
