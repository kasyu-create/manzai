        <p>ツッコミ</p>
      </div>

      <br><br>
      <div class="row">

        <%= link_to "前へ", users_boke_tukkomi_path(@boke_tukkomis), class: "btn btn-success" %>

        <span>　　</span>
        <%= link_to "次へ", users_boke_tukkomis_3_path, class: "btn btn-success" %>
      </div>
</div>
