<div class="d-flex align-items-center">
  <h1>ネタ投稿</h1>
</div>
<br>
<%= form_for(@script, url:users_user_boke_tukkomis_script_path) do |f| %>
    <div class="form-group">
        <%= f.label :name, '設定名' %>
        <%= f.text_field :name, class: 'form-control' %>
        <small id="poster-tip" class="form-text text-muted">
            設定名を入力してください。
        </small>
    </div>
    <br>
    <div class="form-group">
        <%= f.label :furiboketukkomi, 'ネタ内容' %>
        <%= f.text_area :furiboketukkomi, class: 'form-control', rows:10 %>
        <small id="content-tip" class="form-text text-muted">
            ネタ内容を入力してください。
        </small>
    </div>
    <br>
    <%= f.submit '投稿', class: 'btn btn-info btn-block' %>
<% end %>
