<div class="row">
    <div class="col-xs-12">
      <h3><strong>登録情報編集</strong></h3>
      <%= form_with(model:@user, url:user_path ,method: :PATCH) do |f| %>
      <!-- local: trueがない場合、Rails5ではAjaxによる送信という意味になる。普通にHTMLとしてフォームを送信する場合にlocal: trueが必要になる-->
        <div>
            <div class="col-xs-12">
              <%= f.label :"氏名", class: "col-sm-3 control-label", style: "margin: 10px;" %>
              <%= f.text_field :name, class: "name col-sm-3 form-control-static name", style: "margin: 10px;" %>
            </div>
            <div class="col-xs-12">
              <%= f.label :"メールアドレス", class: "col-sm-3 control-label", style: "margin: 10px;" %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-sm-6 form-control-static", style: "margin: 10px;" %>
            </div>
        </div>

        <div class="actions col-xs-10 col-xs-offset-2">
        <p>
          <%= f.submit "編集内容を保存する", class: "btn btn-primary col-sm-3", style: "margin: 10px;" %>
          <%= link_to " 退会する", quit_path, class: "glyphicon glyphicon-tint btn btn-danger col-sm-3", style: "margin: 10px;" %>
        </p>
        </div>
      <% end %>
    </div>
</div>
