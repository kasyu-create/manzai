<div class="row">
  <div class="col-xs-12">
    <h3><strong>マイページ</strong></h3>
        <table class="table table-bordered table-condensed">
            <p>
                <strong class="information-link">登録情報</strong>
                <%= link_to " 編集する", edit_user_path(current_user), class: "glyphicon glyphicon-pencil btn btn-success" %>
                <%= link_to " パスワードを変更する", edit_user_password_path, class: "glyphicon glyphicon-pencil btn btn-warning" %>
            </p>
            <tr>
                <td class="col-xs-2">氏名</td>
                <td><%= current_user.name %></td>
            </tr>
            <tr>
                <td class="col-xs-2">メールアドレス</td>
                <td><%= current_user.email %></td>
            </tr>
        </table>

        <p>
            <strong class="shipping-link">台本履歴</strong>
            <%= link_to " 一覧を見る", user_path(current_user), class: "glyphicon glyphicon-folder-open btn btn-info" %>
        </p>
  <div>
</div>
