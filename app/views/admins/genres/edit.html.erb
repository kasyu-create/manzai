<div class="row">
  <div class="col-xs-10 col-xs-offset-1">
    <h2>ジャンル編集</h2><br>
  </div>
</div>

<div class="row">
  <div class="col-xs-10 col-xs-offset-1">
  <%= form_for(@genre, url: admins_genre_path) do |f| %>

        <div class="col-xs-4">
          <%= f.label :ジャンル %>
          <%= f.select :category,Genre.categories.keys.to_a %>
        </div>

        <div class="col-xs-4">
        <%= f.label :設定 %>
        <%= f.text_field :name %>
        </div>

        <div class="col-xs-1">
        <%= f.radio_button :status, :true %>
        <%= f.label :status, "有効"  %>
        </div>


        <div class="col-xs-1">
        <%= f.radio_button :status, :false %>
        <%= f.label :status, "無効" %>
        </div>

        <div class="col-xs-1">
        <%= f.submit "変更を保存する" ,class: "btn btn-primary" %>
        </div>
  <% end %>
</div>
</div>
