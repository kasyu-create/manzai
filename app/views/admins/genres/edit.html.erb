<div class="row">
  <div class="col-xs-10 col-xs-offset-1">
    <h2>ジャンル編集</h2><br>
  </div>
  <div class="col-xs-10">
  <%= form_for(@genre, url: admins_genre_path) do |f| %>

        <div class="col-xs-4">
          <%= f.label :ジャンル %>
          <%= f.text_field :gen %>
        </div>

        <div class="col-xs-4">
        <%= f.label :設定 %>
        <%= f.text_field :name %>
        </div>

        <div class="col-xs-1">
        <%= f.radio_button :is_genres_status, :true %>
        <%= f.label :is_genres_status, "有効"  %>
        </div>


        <div class="col-xs-1">
        <%= f.radio_button :is_genres_status, :false %>
        <%= f.label :is_genres_status, "無効" %>
        </div>

        <div class="col-xs-1">
        <%= f.submit "変更を保存する" ,class: "btn btn-primary" %>
        </div>
      </div>
  <% end %>

</div>
