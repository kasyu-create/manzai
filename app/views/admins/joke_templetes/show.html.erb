
<div class="pull-right" style="text-align: right;">
	<%= search_form_for(@search, url:admins_joke_templete_path) do |f| %>
		<%= f.label :funny_man, "キーワード" %>
		<%= f.search_field :funny_man_cont %>
		<%= f.submit %>
	<% end %>
</div>

<div class="row">
  <div class="col-xs-10 col-xs-offset-1">
      <h2>ボケ・ツッコミ一覧</h2>

  <div class="text-right">
      <%= link_to "新規登録" ,new_admins_joke_templete_path, class:"btn btn-lg btn-primary" %>
  </div>
	</div>
</div>

<div class="row">
  <div class="col-xs-10 col-xs-offset-1">
      <!-- ofsetは左右の余白 -->
      <table class="table">
        <thead>
          <tr>
            <th>番号</th>
						<th>フリ</th>
            <th>ボケ</th>
            <th>ツッコミ</th>
          </tr>
        </thead>

        <tbody>
          <% @joke_templetes.each do |joke_templete| %>
					<% if @genre.id == joke_templete.genre.id %>
            <tr>
              <td><%= link_to joke_templete.id,admins_path(joke_templete)  %></td>
							<td><%= joke_templete.introduction %></td>
              <td><%= joke_templete.funny_man %></td>
              <td><%= joke_templete.straight_man %></td>
            </tr>
            <% end %>
						<% end %>
            <%= paginate @joke_templetes %>
        </tbody>
      </table>
    </div>
  </div>
