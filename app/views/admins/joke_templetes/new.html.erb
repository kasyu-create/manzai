
<div class="row">
  <div class="col-md-10 col-md-offset-1 col-xs-10 col-xs-offset-1">
     <h2>ボケ・ツッコミ新規登録</h2><br>
  </div>
</div>

  <div class="row">
    <div class="col-md-10 col-md-offset-1 col-xs-10 col-xs-offset-1">
  <%= form_for(@joke_templetes, url: admins_joke_templetes_path) do |f| %>

  <div class="col-md-5 col-xs-5">
    <div class="boke_tukkomi-new-form">
      <img src="/assets/560893.jpg" width="320" height="220">
    </div>
  </div>

    <div class="col-md-5 col-xs-5">
      <table class="new-form-table">
        <tbody>

          <tr>
            <th>ジャンル</th>
            <td><%= f.collection_select :genre_id, Genre.all ,:id, :name, include_blank: "--選択してください--", class: "form-control" %></td>
          </tr>

          <tr>
            <th>フリ</th>
            <td><%= f.text_field :introduction, class: "form-control" %></td>
          </tr>

          <tr>
            <th>ボケ</th>
            <td><%= f.text_field :funny_man, class: "form-control" %></td>
          </tr>

          <tr>
            <th>ツッコミ</th>
            <td><%= f.text_field :straight_man, class: "form-control" %></td>
          </tr>

          <tr>
            <th>ページ</th>
            <td><%= f.text_field :page, class: "form-control" %></td>
          </tr>

        </tbody>
      </table>

      <br>
      <div class="text-right">
      <%= f.submit "新規登録" ,class: "btn btn-primary text-right" %>
      </div>
      <% end %>
      </div>
</div>
</div>
