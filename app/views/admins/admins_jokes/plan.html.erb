<div class="pull-right" style="text-align: right;">
	<%= search_form_for(@search, url:admins_plan_path) do |f| %>
		<%= f.label :name, "キーワード" %>
		<%= f.search_field :name_cont %>
		<%= f.submit %>
	<% end %>
</div>

<div class="row">
  <div class="col-xs-10 col-xs-offset-1">

    <h2>シーン選択画面</h2><br>

  </div>

  <br>
    <!-- ofsetは左右の余白 -->
    <table class="table genre-index">
      <thead>
        <tr>
          <th>ジャンル</th>
          <th>設定</th>
        </tr>
      </thead>

      <tbody>

        <% @genres.each do |genre| %>
        <% if genre.status == true %>
          <tr>
            <td><%= genre.category %></td>

            <td><%= link_to genre.name,admins_admins_joke_path(genre) %></td>

          </tr>
          <% end %>
          <% end %>
          <%= paginate @genres %>
      </tbody>
    </table>
</div>
</div>
