<div class="pull-right" style="text-align: right;">
	<%= search_form_for(@search, url:admins_users_path) do |f| %>
		<%= f.label :name, "キーワード" %>
		<%= f.search_field :last_name_or_first_name_cont %>
		<%= f.submit %>
	<% end %>
</div>

  <div class="row">
    <div class="col-xs-10 col-xs-offset-1">
      <h2>会員一覧</h2>

      <table class="table">
        <thead>
          <tr>
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thead>

        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= user.id %></td>
              <td><%= link_to user.last_name + "　"  + user.first_name,admins_user_path(user) %></td>
              <td><%= user.email %></td>
              <td>
                <% if user.is_users_status == true %>
                有効
                <% else %>
                無効
                <% end %>
              </td>
            </tr>
            <% end %>
            <%= paginate @users %>
        </tbody>
      </table>
    </div>
  </div>
