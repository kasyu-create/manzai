
<div class="row">
  <div class="col-xs-10 col-xs-offset-1">
      <h2>会員情報詳細</h2>
        <table class="row table">

            <tr>
              <th class="col-xs-2">顧客ID</th>
              <td class="col-xs-10"><%= @user.id %>
              <% if @user.is_users_status == true %>
              <span class="label label-primary">
                有効会員
              </span>
              <% else %>
              <span class="label label-danger">
                退会済み
              </span>
              <% end %>
              </td>
            </tr>

            <tr>
              <th>氏名</th>
              <td><%= @user.last_name %>
              <%= @user.first_name %></td>
            </tr>

            <tr>
              <th>フリガナ</th>
              <td><%= @user.last_name_kana %><%= @user.first_name_kana %></td>
            </tr>

            <tr>
              <th>メールアドレス</th>
              <td><%= @user.email %></td>
            </tr>
        </table>

        <div class="row">
          <%= link_to "編集する", edit_admins_user_path(@user), class: "btn btn-success" %>
        </div>
  </div>
</div>
