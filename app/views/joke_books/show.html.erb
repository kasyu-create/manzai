<div class="row">
  <div class="col-xs-10 col-xs-offset-1">
      <h2></h2><br>

      <% if @joke_books.joke != nil %>
            <%= @joke_books.joke.gsub(/\r\n|\r|\n/, "<br />").html_safe  %>
      <% end %>
  </div>
</div>
      <br><br>

<div class="row">
  <div class="col-xs-10 col-xs-offset-1">

    <% if @joke_books.user.id.to_i == current_user.id %>
      <div class="col-xs-6", style="text-align: left;">
          <%= link_to "ネタ作成を終了する",root_path,class: "btn btn-success btn-lg" %>
          <span>　</span>
      </div>
      <div class="col-xs-6", style="text-align: right;">
        <%= link_to "編集する",edit_joke_book_path(@joke_books), class: "btn btn-success btn-lg" %>
          <span>　</span>
        <%= link_to "削除する",joke_book_path(@joke_books), method: :delete,class: "btn btn-success btn-lg" %>
      </div>
    <% end %>

      <br><br><br><br>
  </div>
</div>
