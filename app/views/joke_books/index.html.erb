<div class="pull-right" style="text-align: right;">
	<%= search_form_for(@search, url:joke_books_path) do |f| %>
		<%= f.label :name, "キーワード" %>
		<%= f.search_field :name_cont,  placeholder: "設定名を入力して下さい" %>
		<%= f.submit %>
	<% end %>
</div>

<div class="row">
  <div class="col-xs-10 col-xs-offset-1">

    <h2>投稿ネタ一覧</h2>
    <h4>ここは全ユーザーの投稿したネタが見れます！</h2>
    <br>

  </div>

  <br>
    <!-- ofsetは左右の余白 -->
  <% @joke_books.each do |joke_book| %>
	<% if joke_book.joke != nil %>
    <table class="table genre-index">
      <thead>
        <tr>
          <th><%= joke_book.user.name %>さん</th>
        </tr>
      </thead>

      <tbody>

          <tr>
            <td><%= link_to joke_book.name, joke_book_path(joke_book) %></td>
          </tr>

      </tbody>
    </table>
		  <% end %>
      <% end %>


</div>
</div>
